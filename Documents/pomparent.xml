            </distributionManagement>
        </profile>
		<profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>              
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sonar-maven-plugin</artifactId>                          
                        <executions>
                            <execution>
                                <id>sonar</id>
                                <goals>
                                    <goal>sonar</goal>
                                </goals>
                                <inherited>true</inherited>
                            </execution>
                        </executions>
                        <configuration>
                           <sonar.host.url>http://ec2-52-43-98-236.us-west-2.compute.amazonaws.com:9000/</sonar.host.url>
                        </configuration>
                    </plugin>
				</plugins>
            </build>
        </profile>
