	<distributionManagement>
        <repository>
            <id>release</id>
            <url>http://ec2-52-32-59-235.us-west-2.compute.amazonaws.com:8081/repository/hrworkdays</url>
        </repository>
		<snapshotRepository>
            <id>release</id>
            <url>http://ec2-52-32-59-235.us-west-2.compute.amazonaws.com:8081/repository/snapshots</url>
